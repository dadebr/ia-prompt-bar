{
  "manifest_version": 3,
  "name": "IA Prompt Bar",
  "description": "Barra lateral para salvar e injetar prompts em chats de IA.",
  "version": "1.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
